{
  "name": "debezium-source-connector-mysql-users",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",
    "database.hostname": "mysql",
    "database.port": "3306",
    "database.user": "simplydemo",
    "database.password": "simplydemo1234",
    "database.server.id": "184054",
    "database.allowPublicKeyRetrieval": "true",
    "database.server.name": "simplydemo-server01",
    "database.include.list": "simplydemo",
    "table.include.list": "simplydemo.users",
    "include.schema.changes": "true",
    "include.schema.comments" : "true",
    "tombstones.on.delete": "true",
    "topic.prefix" : "debezium",
    "database.history.kafka.topic": "schema-changes.database",
    "schema.history.internal.kafka.topic": "schema-changes.schema",
    "database.history.kafka.bootstrap.servers": "broker:29092",
    "schema.history.internal.kafka.bootstrap.servers": "broker:29092",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",
    "time.precision.mode": "connect",
    "heartbeat.interval.ms": "2000",
    "snapshot.mode": "when_needed",
    "snapshot.locking.mode": "none",
    "skipped.operations" : "none"
  }
}
